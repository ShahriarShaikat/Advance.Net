@model List<eCommerceSite.Models.Database.product>
@{
    ViewBag.Title = "ViewCart";
}




<h2>Cart Page</h2>
@if (TempData["msg"] != null) { @TempData["msg"]; }
@if (Session["msg"] != null) 
{ 
    <h1 style="color:green;">@Session["msg"]</h1>  
    Session["msg"] = null;
}
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
    </tr>


    @foreach (var obj in Model)
    {
        <tr>
            <td>@obj.id</td>
            <td>@obj.name</td>
            <td>@obj.price</td>
            <td>@obj.qty</td>
            <td><a class="btn btn-danger" href="/product/DeleteProduct/@obj.id">Delete</a></td>
        </tr>
    }

</table>